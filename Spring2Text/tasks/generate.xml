<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="Spring2Text">
    <property name="ECLIPSE_HOME" value="../../../eclipse/modeling-2023-12/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="Spring2Text.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/Spring2Text/bin"/>
    </path>

    <path id="Spring2Text.classpath">
        <path refid="Spring2Text.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="Spring2Text.libraryclasspath.alljars">
        <pathelement location="../Spring2Text/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="Spring2Text.classpath.alljars">
        <path refid="Spring2Text.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="Spring2Text.main.Generate" classpathref="Spring2Text.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="Spring2Text.main.Generate" classpathref="Spring2Text.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
